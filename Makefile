NAME = ircserv
CC = c++
CFLAGS = -g3 -Wall -Wextra -Werror -std=c++98

SRCS =	srcs/main.cpp	\
		srcs/server.cpp \
		srcs/channel.cpp\
		srcs/client.cpp	\
		srcs/commands.cpp

OBJDIR = objs
OBJS = $(SRCS:srcs/%.cpp=$(OBJDIR)/%.o)

all: $(NAME)

$(NAME): $(OBJS)
	@echo "Compilation complete âœ…"
	@$(CC) $(CFLAGS) -o $@ $^

$(OBJDIR)/%.o: srcs/%.cpp
	@mkdir -p $(OBJDIR)
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "Cleaning objects ðŸ§¹"
	@rm -rf $(OBJDIR)

fclean: clean
	@echo "Removing executable ðŸ§¼"
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
